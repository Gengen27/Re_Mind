<div class="container" style="padding: 2rem 1rem;">
  <div class="max-w-3xl mx-auto" style="max-width: 48rem; margin: 0 auto;">
    <div class="mb-6">
      <%= link_to @post, class: "text-indigo-600 hover:text-indigo-800 inline-flex items-center mb-4", style: "text-decoration: none; color: var(--primary); display: inline-flex; align-items: center; gap: 0.5rem; margin-bottom: 1rem;" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        <span>詳細に戻る</span>
      <% end %>
      
      <h1 class="text-3xl font-bold text-gray-900 mb-2" style="font-size: 2rem; font-weight: 700; margin-bottom: 0.5rem;">
        失敗ログを編集
      </h1>
      <p class="text-gray-600">内容を見直して更新しましょう</p>
    </div>

    <div class="card">
      <%= render "form", post: @post %>
    </div>
  </div>
</div>