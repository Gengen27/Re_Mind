<div class="min-h-screen flex items-center justify-center py-12 px-4" style="min-height: calc(100vh - 4rem); display: flex; align-items: center; justify-content: center; padding: 3rem 1rem;">
  <div class="card max-w-md w-full" style="max-width: 28rem; width: 100%;">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">ログイン</h1>
      <p class="text-gray-600">Re:Mind へようこそ</p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email, "メールアドレス", class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "your@email.com" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード", class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "パスワードを入力" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <label class="flex items-center" style="display: flex; align-items: center; gap: 0.5rem; cursor: pointer;">
            <%= f.check_box :remember_me %>
            <span class="text-sm text-gray-700">ログイン状態を保持する</span>
          </label>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.submit "ログイン", class: "btn btn-primary", style: "width: 100%;" %>
      </div>
    <% end %>

    <div class="text-center mt-6 space-y-2" style="margin-top: 1.5rem; text-align: center;">
      <%= link_to "新規登録", new_registration_path(resource_name), class: "text-indigo-600 hover:text-indigo-800", style: "text-decoration: none; color: var(--primary); display: block; margin-bottom: 0.5rem;" %>
      <%= link_to "パスワードを忘れた方", new_password_path(resource_name), class: "text-gray-600 hover:text-gray-800 text-sm", style: "text-decoration: none; color: var(--gray-600); font-size: 0.875rem; display: block;" %>
    </div>
  </div>
</div>