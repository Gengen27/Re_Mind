<nav class="bg-white shadow-sm border-b border-gray-200">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex items-center space-x-8">
        <%= link_to dashboard_path, class: "flex items-center logo-link" do %>
          <span class="logo-text" style="font-size: 2.25rem; font-weight: 800; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; letter-spacing: -0.02em;">Re:Mind</span>
        <% end %>

        <!-- Navigation Links -->
        <div class="flex space-x-4">
          <%= link_to dashboard_path, class: "nav-link #{current_page?(dashboard_path) ? 'active' : ''}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            <span>ホーム</span>
            <% if defined?(@pending_reminders_count) && @pending_reminders_count > 0 %>
              <span class="badge badge-danger" style="margin-left: 0.25rem; font-size: 0.75rem; background-color: var(--danger); color: white; padding: 0.125rem 0.5rem; border-radius: 9999px; font-weight: 600;">
                <%= @pending_reminders_count %>
              </span>
            <% end %>
          <% end %>

          <%= link_to posts_path, class: "nav-link #{current_page?(posts_path) ? 'active' : ''}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <span>ログ</span>
          <% end %>

          <%= link_to analytics_path, class: "nav-link #{current_page?(analytics_path) ? 'active' : ''}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
            <span>分析</span>
          <% end %>

          <%= link_to reminders_path, class: "nav-link #{current_page?(reminders_path) ? 'active' : ''}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
            </svg>
            <span>振返り</span>
          <% end %>

          <%= link_to reflection_path, class: "nav-link #{current_page?(reflection_path) ? 'active' : ''}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
            <span>学び</span>
          <% end %>

          <%= link_to categories_path, class: "nav-link #{current_page?(categories_path) ? 'active' : ''}" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
            </svg>
            <span>カテゴリ</span>
          <% end %>
        </div>
      </div>

      <!-- Right Side: User Menu -->
      <div class="flex items-center space-x-4">
        <%= link_to new_post_path, class: "btn btn-primary" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          <span>新規投稿</span>
        <% end %>

        <div class="relative dropdown">
          <button type="button" class="dropdown-button" style="padding: 0.625rem 1rem; border-radius: 0.5rem; border: 2px solid var(--gray-200); background-color: white; transition: all 0.2s; display: flex; align-items: center; gap: 0.5rem; color: var(--gray-700); font-weight: 500; font-size: 0.875rem; white-space: nowrap;">
            <svg style="width: 1.25rem; height: 1.25rem; flex-shrink: 0;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            <span style="display: inline-block;">メニュー</span>
          </button>

          <div class="dropdown-menu">
            <div style="padding: 0.75rem 1rem; border-bottom: 1px solid var(--gray-200);">
              <p style="font-size: 0.875rem; font-weight: 500; color: var(--gray-900); margin-bottom: 0.25rem;"><%= current_user.name %></p>
              <p style="font-size: 0.75rem; color: var(--gray-500);"><%= current_user.email %></p>
            </div>
            <%= link_to settings_path, class: "dropdown-item" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span>設定</span>
            <% end %>
            <%= button_to destroy_user_session_path, method: :delete, class: "dropdown-item", style: "color: var(--danger);" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
              <span>ログアウト</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>

<style>
.logo-link:hover .logo-text {
  transform: scale(1.05);
  transition: transform 0.2s ease;
}

.dropdown-button:hover {
  border-color: var(--primary) !important;
  background-color: rgba(79, 70, 229, 0.05) !important;
  color: var(--primary) !important;
}
</style>
